extends layout

block content
  //- Indentation based
  .wrapper#root
    //- declare javascript with a hyphen
    - const nameTwo = dog.toUpperCase();
    h2.hello-msg Welcome to Hello!
    ul#list
      li Hi, I'm #{name}
      li My dog's name is #{dog}
      li #{nameTwo}
    img.img--dog(src="dog.jpg" alt=`Dog-${dog}`)
    h2 Sale ends in #{h.moment().endOf('day').fromNow()}